{% extends 'base.jinja2' %} 

{%block script%}
$(document).ready(function(){
  $("#prependButton").click(function(){
    $("#prependModal").modal('show');
  });
});

{%endblock%}

{% block title %}
Home
{%endblock%}

{%block content%}
    {%include "prepend_token_modal.jinja2"%}
    {%with card_title="Encoder Text",submit_name="enc_submit"%} 
        {%include "textcard.jinja2"%}
    {%endwith%}
    {%if enc_token_text%}
        {%with card_title="Encoder Tokens",token_list=enc_token_text,dec_flag=False%}
            {%include "tokencard.jinja2"%}
        {%endwith%}
    {%endif%}
    {%with card_title="Decoder Text",submit_name="dec_submit"%}
        {%include "textcard.jinja2"%}
    {%endwith%}
    {%if dec_token_text%}
        {%with card_title="Decoder Tokens",token_list=dec_token_text,dec_flag=True%}
            {%include "tokencard.jinja2"%}
        {%endwith%}
    {%endif%}
{%endblock%}